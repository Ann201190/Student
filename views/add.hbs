<h1>Добавить студента</h1>

<form action="/add" method="POST">
  <div class="input-field">
    <input id="lastname" name="lastname" type="text" class="validate" required>
    <label for="lastname">Фамилия студента</label>
    <span class="helper-text" data-error="Введите фамилию студента"></span>
  </div>

  <div class="input-field">
    <input id="firstname" name="firstname" type="text" class="validate" required min="1">
    <label for="firstname">Имя студента </label>
    <span class="helper-text" data-error="Введите имя студента"></span>
  </div>

  <div class="input-field">
    <input id="patronymic" name="patronymic" type="text" class="validate" required min="1">
    <label for="patronymic">Отчество студента</label>
    <span class="helper-text" data-error="Введите отчество студента"></span>
  </div>

  <div class="input-field">
    <input id="age" name="age" type="number" class="validate" required min="1">
    <label for="age">Возраст студента</label>
    <span class="helper-text" data-error="Введите возраст студента"></span>
  </div>

  <div class="input-field">
    <input id="group" name="group" type="text" class="validate" required>
    <label for="group">Группа</label>
    <span class="helper-text" data-error="Введите группу"></span>
  </div>

  <button class="btn btn-primary">Добавить </button>
</form>